{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nic_Port_Name": {
            "defaultValue": "PortB",
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "westus",
            "allowedValues": [
                "Brazil South",
                "brazilsouth",
                "East Asia",
                "eastasia",
                "East US",
                "eastus",
                "Japan East",
                "japaneast",
                "Japan West",
                "japanwest",
                "North Central US",
                "northcentralus",
                "North Europe",
                "northeurope",
                "South Central US",
                "southcentralus",
                "West Europe",
                "westeurope",
                "West US",
                "westus",
                "Southeast Asia",
                "southeastasia",
                "Central US",
                "centralus",
                "East US 2",
                "eastus2"
            ],
            "metadata": {
                "description": "Deployment Location Hint: Use lowercase for creating ipaddress"
            }
        },
        "Port_PrivateIp": {
            "defaultValue": "172.18.1.4",
            "type": "string"
        },
        "virtualNetworks_xgvnet_name": {
            "type": "string",
            "defaultValue": "vnet"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('nic_Port_Name')]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "privateIPAddress": "[parameters('Port_PrivateIp')]",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_xgvnet_name')), '/subnets/LAN')]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                      "dnsServers": []
                },
                "enableIPForwarding": true
            }
        }
    ]
}